#bind e:cmd hint ASDFGHJKLQWERTYUIOPCVBN # use whatever keys you want
bind g:cmd grid padding:5 0:6,2 1:8,3

# resize bindings
bind right:cmd;ctrl       resize +10% +0
bind left:cmd;ctrl        resize -10% +0
bind up:cmd;ctrl          resize +0   -10%
bind down:cmd;ctrl        resize +0   +10%

# nudge bindings
bind right:alt;ctrl;cmd       nudge +10% +0
bind left:alt;ctrl;cmd        nudge -10% +0
bind up:alt;ctrl;cmd          nudge +0   -10%
bind down:alt;ctrl;cmd        nudge +0   +10%
